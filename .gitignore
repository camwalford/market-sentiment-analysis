.gradle
**/build/
!src/**/build/

# IntelliJ environment settings
.idea
!.idea/modules.xml  # Contains information about project modules
!.idea/*.iml        # .iml files define the module structure
!.idea/vcs.xml      # Version control settings
!.idea/codeStyles   # Share code style settings across team members
!.idea/misc.xml     # Project-wide settings like language level

# Ignore Gradle GUI config
gradle-app.setting

# Avoid ignoring Gradle wrapper jar file (.jar files are usually ignored)
!gradle-wrapper.jar

# Avoid ignore Gradle wrappper properties
!gradle-wrapper.properties

# Cache of project
.gradletasknamecache

# Eclipse Gradle plugin generated files
# Eclipse Core
.project
# JDT-specific (Eclipse Java Development Tools)
.classpath
